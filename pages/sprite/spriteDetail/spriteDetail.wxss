page{
  background-color: #ebf3f3ce;
}
.sprite-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 150rpx;
  margin-top: 30rpx;
  margin-bottom: 5rpx;
  font-size: 34rpx;
  background-color: white;
  color: #353535;
}

.sprite-name{
  font-size: 36rpx;
}

.sprite-img{
  width: 80rpx;
  height: 80rpx;
  padding: 10rpx;
}

.types {
  margin-left: auto;
  margin-right: 0%;
}
.m-type {
  margin-left: 20rpx;
}

.data-container{
  display: flex;
  flex-direction: row;
  border-bottom: solid #20191931 1rpx;
  align-items: center;
  height: 80rpx;
  font-size: 34rpx;
  background-color: white;
  color: #353535;
}

.title-container{
  margin: 5rpx 0 15rpx 0;
}

.title{
  font-size: 32rpx;
}

.data-title{
  width: 180rpx;
}

.content {
  display: flex;
  flex: 1;
  padding-left: 0;
  padding-right: 60rpx;
}

.content text{
  margin: 5rpx;
}

.feature-container{
  display: flex;
  flex-direction: column;
  border-bottom: solid #20191931 1rpx;
  font-size: 34rpx;
  background-color: white;
  color: #353535;
}

.featureName{
  float: left;
  margin: 8rpx;
  font-weight: bold;
  font-size: 36rpx; 
}

.feature{
  margin: 5rpx;
}

.evolution-container{
  display: flex;
  flex-direction: row;
  /* 水平居中 */
  justify-content:center;
  align-items: center;
  font-size: 34rpx;
  background-color: white;
  color: #da5959;
  height: 200rpx;
  margin-bottom: 20rpx;
}
.arrow{
  height: 20rpx;
  width: 80rpx;
}
.level{
  font-size: 24rpx;
  text-align: center;
}
.name{
  font-size: 24rpx;
  text-align: center;
}
.nameColor{
  width: 100%;
  display: block;
  background-color: cyan;
}

.nolevel {
  width: 100%;
  display: block;
  text-align: center;
  padding-bottom: 10rpx;
  color: rgb(228, 77, 77);
  font-size: 14rpx;
}

.arrow-container{
  display: flex;
  flex-direction: column;
  text-align: center;
  margin: 0 30rpx;
  font-size: 22rpx;
}

.evolutionImg-container{
  display: flex;
  flex-direction: column;
  border-radius: 8rpx;
  border: solid #8567d898 1rpx;
  align-items: center;
}

.content progress{
  width: 100%;
}

.pTitle{
  font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
  color: #a57d7d;
  padding-right: 20rpx; 
}
